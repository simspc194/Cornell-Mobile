<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bff.games.matches"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="10"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:label="@string/app_name"
            android:name=".app.GameApplication"
            android:theme="@style/ActivityTheme"
            android:icon="@drawable/icon"
            android:screenOrientation="portrait"
            android:debuggable="true"
            >

        <activity android:name=".activities.Main"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.GameTime"
                  android:label="Match Larvae and Bugs"
                  android:screenOrientation="portrait"
                  />
        <activity android:name=".activities.instructions"
                  android:label="Instructions"
                  android:screenOrientation="portrait"
                />
        <activity android:name=".activities.AboutUs"
                  android:label="About Us"
                  android:screenOrientation="portrait"
                  />
        <activity android:name=".activities.Results"
                  android:label="Results"
                  android:screenOrientation="portrait"
                />
        <activity android:name=".activities.Configurations"
                  android:label="Configuration"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".activities.Study"
                  android:label="Study"
                  android:screenOrientation="portrait"
                />

        <activity android:name=".activities.BiggerPicture"
                  android:label="BiggerPicture"
                  android:screenOrientation="portrait"
                />
    </application>
</manifest> 
